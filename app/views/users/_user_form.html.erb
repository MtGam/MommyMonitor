<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
  <div class="error message">
    <h2>Invalid form. Please try again.</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    </p>
  </div>

  <div class="field">
    <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    </p>
  </div>

  <div class="field">
    <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
    </p>
  </div>

  <div class="field">
    <p>
    <%= f.label :phone %>
    <%= f.number_field :phone %>
    </p>
  </div>

  <div class="field">
    <p>
    <%= f.label :address %>
    <%= f.text_field :address %>
    </p>
  </div>


  <div class="field">
    <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
    </p>
  </div>

  <div class="field">
    <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    </p>
  </div>

  <div class="action">
    <%= f.submit "Join" %>
  </div>
<% end %>
