  <% if @user.errors.any? %>
  <div class="error message">
    <h2>Invalid form. Please try again.</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <p>
    <strong><%= f.label :first_name %></strong>
    <%= f.text_field :first_name, placeholder: "First Name" %>
    </p>
  </div>

  <div class="field">
    <p>
    <strong><%= f.label :last_name %></strong>
    <%= f.text_field :last_name, placeholder: "Last Name" %>
    </p>
  </div>

  <div class="field">
    <p>
    <strong><%= f.label :email %></strong>
    <%= f.text_field :email, placeholder: "Email" %>
    </p>
  </div>

  <div class="field">
    <p>
    <strong><%= f.label :phone %></strong>
    <%= f.text_field :phone, placeholder: "eg. 123-456-7890" %>
    </p>
  </div>

  <div class="field">
    <p>
    <strong><%= f.label :address %></strong>
    <%= f.text_field :address, placeholder: "eg. 1 Street, City, Postal" %>
    </p>
  </div>

  <div class="field">
    <p>
    <strong><%= f.label :password %></strong>
    <%= f.password_field :password, placeholder: "Password" %>
    </p>
  </div>

  <div class="field">
    <p>
    <strong><%= f.label :password_confirmation %></strong>
    <%= f.password_field :password_confirmation, placeholder: "Password confirmation" %>
    </p>
  </div>
