<%= image_tag "logo3.png", :width => "204", :height => "106", class: "mommylogo"%>

  <div class="profile-wrapper animated fadeIn">
    <div class="doc-profile">

      <div class="notice">
        <% if notice != nil %>
          <p style="color: red; font-weight: bold;"><%= notice %></p>
        <% end %>
      </div>

      <%= image_tag "diagnostics-161140.png", :width => "100", :height => "120", class: "doc-img" %>
      <h3 class="page-title">Doctor Profile</h3>

        <div class="prof1">
          <p>name:</p>
          <p>address:</p>
          <p>phone number:</p>
          <p>email:</p>
          <p>registration number:</p>
          <p>qualifications:</p>
        </div>

        <div class="prof2">
          <p><%= " #{@user.first_name.titleize} #{@user.last_name.titleize}" %></p>
          <p><%= " #{@user.address}" %></p>
          <p><%= " #{@user.phone}" %></p>
          <p><%= " #{@user.email}" %></p>
          <p><%= " #{@user.regis_number}" %></p>
          <p><%= " #{@user.doc_qual}" %></p>
        </div>


        <h3 class="page-title">List of Patients:</h3>
        <%= link_to "Send Text To Patient", messages_new_path, class: "doc-btn" %>

          <div class="doc-list">
            <% if current_user == @doctor %>
              <% @mothers.each do |mother|%>
              <li><%= link_to "#{mother.first_name} #{mother.last_name}", mother %></li>
              <% end %>
            <%end%>

          </div>

    </div>
  </div>
