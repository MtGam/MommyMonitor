<%= image_tag "logo3.png", :width => "204", :height => "106", class: "mommylogo"%>

<div class="container">
  <div class="field2">
    <div class="field-input2">

      <h3 class="login-title">sign-up</h3>

        <%= form_for @user do |f| %>

          <%= render 'user_form', f: f %>

            <h4 id="r1">Click if you're a Mommy!</h4>
              <div class="role1">
                <p><%= render 'mommy_form', f: f %></p>
              </div>


            <h4 id="r2">Click if you're a Doctor!</h4>
              <div class="role2">
                <p><%= render 'doc_form', f: f %></p>
              </div>

              <%= f.submit 'Submit', class: "login-btn" %>

        <% end %>
    </div>
  </div>
</div>
