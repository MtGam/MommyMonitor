<div class="container">

    <h2>Sign Up Now</h2>

      <%= form_for @user do |f| %>

      <div class="field">
        <%= render 'user_form' %>
      </div>

      <div class="role">
        <h4>Click here if you're a Mommy!</h4>
        <%= render 'mommy_form' %>
      </div>

      <div class="role">
        <h4>Click here if you're a Doctor!</h4>
        <%= render 'doc_form' %>
      </div>

      <div>
        <p><%= f.submit "Submit" %></p>
      </div>

      <% end %>
  
</div>
